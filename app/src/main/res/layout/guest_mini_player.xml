<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/miniPlayerGuest"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/gray"
    android:padding="8dp"
    android:clickable="true">

<ImageView
android:id="@+id/trackThumbnailGuest"
android:layout_width="48dp"
android:layout_height="48dp"
android:src="@drawable/example"
android:scaleType="centerCrop"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintBottom_toBottomOf="parent" />

<TextView
android:id="@+id/trackTitleGuest"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:text="Guest track"
android:textColor="@android:color/black"
android:maxLines="1"
android:ellipsize="end"
android:layout_marginStart="12dp"
android:layout_marginEnd="8dp"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintStart_toEndOf="@id/trackThumbnailGuest"
app:layout_constraintEnd_toStartOf="@id/playGuest" />

<TextView
android:id="@+id/trackArtistGuest"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:text="Guest Artist"
android:textColor="@android:color/darker_gray"
android:maxLines="1"
android:ellipsize="end"
android:textAppearance="?attr/textAppearanceCaption"
android:layout_marginEnd="8dp"
app:layout_constraintTop_toBottomOf="@id/trackTitleGuest"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintStart_toStartOf="@id/trackTitleGuest"
app:layout_constraintEnd_toEndOf="@id/trackTitleGuest" />

<ImageButton
android:id="@+id/playGuest"
android:layout_width="36dp"
android:layout_height="36dp"
android:background="?attr/selectableItemBackgroundBorderless"
android:padding="6dp"
android:scaleType="centerInside"
android:src="@drawable/media3_icon_pause"
    app:tint="@android:color/black"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginEnd="8dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
