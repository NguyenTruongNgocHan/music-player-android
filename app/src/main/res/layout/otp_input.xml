<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/otpContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <!-- 6 ô mã code -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <EditText android:id="@+id/code1" style="@style/OTPInputStyle"/>
        <EditText android:id="@+id/code2" style="@style/OTPInputStyle"/>
        <EditText android:id="@+id/code3" style="@style/OTPInputStyle"/>
        <EditText android:id="@+id/code4" style="@style/OTPInputStyle"/>
        <EditText android:id="@+id/code5" style="@style/OTPInputStyle"/>
        <EditText android:id="@+id/code6" style="@style/OTPInputStyle"/>
    </LinearLayout>

    <!-- Nút xác minh -->
    <Button
        android:id="@+id/btnVerifyCode"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Xác minh"
        android:layout_marginTop="12dp"/>
</LinearLayout>
